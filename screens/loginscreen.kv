<LoginScreen>:

    MDBoxLayout:
        orientation: 'vertical'  # Disposition verticale des widgets à l'intérieur du BoxLayout

        canvas.before:
            # Dessine un arrière-plan en deux moitiés avec des couleurs différentes
            Color:
                rgba: 	(0.886, 0.918, 0.969, 0.92) # Couleur bleu clair 
            Rectangle:
                size: self.width, self.height   # Rectangle prenant la moitié inférieure en hauteur
                pos: self.pos  # Position au bas du widget (coin inférieur gauche)

        
        MDBoxLayout:
            orientation: "horizontal"
            padding: [20, 0, 0,30]# [left, top, right, bottom]
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: "Hello again!"  # Texte affiché
                font_name: "EduQLDHand"
                halign: "left"  # Alignement horizontal centré
                theme_text_color: "Custom"  # Couleur personnalisée du texte
                text_color: (0.0, 0.455, 0.718, 1)#(0.062, 0.357, 0.616, 0.8)  # Couleur blanche (RGBA)
                font_size: "45sp"  
                size_hint_y: None  # Hauteur fixe (non proportionnelle)
                height: self.texture_size[1]  # Hauteur automatique selon la taille du texte
                pos_hint: {"center_y": 0.}  # Position verticale centrée à 80% de la hauteur du layout
        
        MDBoxLayout:
            orientation: "horizontal"
            padding: [20, 0, 0,30]# [left, top, right, bottom]
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: "Keep your life safe "  # Texte affiché
                font_name: "EduQLDHand"
                font_size: "15sp" 
                theme_text_color: "Custom"  # Couleur personnalisée du texte
                text_color: (0.0, 0.231, 0.451, 1)#(0.059, 0.176, 0.380, 0.92)
                size_hint_y: None  # Hauteur fixe (non proportionnelle)
                height: self.texture_size[1]  # Hauteur automatique selon la taille du texte
                pos_hint: {"center_y": 0.}  # Position verticale centrée à 80% de la hauteur du layout

       
        
        Widget: 
            size_hint_y: None
            height: "70dp"  # Espace fixe de 16dp entre les boutons

         

        MDTextField:
            id: email_field
            mode: "rectangle"
            hint_text: "Email"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_x: 0.8
            icon_left: "email"
            helper_text_mode: "on_focus"
            helper_text: "Entrez un email valide"   


            helper_text_color: (0.062, 0.357, 0.616, 0.8)        # helper text blanc
            cursor_color: (0.062, 0.357, 0.616, 0.8)              # curseur blanc

            # Couleurs personnalisées
            line_color_normal: 0.6, 0.6, 0.6, 1          
            line_color_focus:0.062, 0.357, 0.616, 0.8           
            text_color: 0.1, 0.1, 0.1, 1                
            hint_text_color: 0.5, 0.5, 0.5, 1            
            icon_left_color: 0.062, 0.357, 0.616, 0.8            
            helper_text_color: 0.062, 0.357, 0.616, 0.8               
   
            cursor_color: 0.062, 0.357, 0.616, 0.8  


        Widget:
            size_hint_y: None
            height : "20dp"  # Espace fixe de 16dp entre les boutons

           
        MDTextField:
            id: password_field
            mode:"rectangle"
            hint_text: "Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_x: 0.8         # un peu plus large
            icon_left: "lock"
            helper_text_mode: "on_focus"
            helper_text: "Entrez un email valide"
        


            # Couleurs personnalisées
            line_color_normal: 0.6, 0.6, 0.6, 1          
            line_color_focus:0.062, 0.357, 0.616, 0.8           
            text_color: 0.1, 0.1, 0.1, 1                
            hint_text_color: 0.5, 0.5, 0.5, 1            
            icon_left_color: 0.062, 0.357, 0.616, 0.8            
            helper_text_color: 0.062, 0.357, 0.616, 0.8               
            cursor_color: 0.062, 0.357, 0.616, 0.8                     

            


        
        Widget: 
            size_hint_y: None
            height: "60dp"  # Espace fixe de 16dp entre les boutons


        MDRoundFlatButton:
            text: "Sign Up"  # Texte du bouton
            pos_hint: {"center_x": 0.5}  # Centré horizontalement
            size_hint: 0.7, None  # Largeur à 60% du parent, hauteur fixe
            height: "48dp"  # Hauteur fixe en dp
            md_bg_color: 0.0, 0.231, 0.451, 1
            text_color:0.886, 0.918, 0.969, 0.92
            #border_radius: (root.radius if root.radius else [0, 0, 0, 0]) if root.shadow_radius == [0, 0, 0, 0] else (root.shadow_radius if root.shadow_radius else [0, 0, 0, 0])
            on_release: app.sign_up()  # Action à la libération du bouton (appelle la méthode sign_up dans app)
        
        Widget: 
            size_hint_y: None
            height: "90dp"  # Espace fixe de 16dp entre les boutons
